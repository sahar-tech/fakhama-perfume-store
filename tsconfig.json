{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["./src/types/*"]  // Add this for type imports
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]  // Add this
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", "**/*.tsx", 
    ".next/types/**/*.ts",    
    "src/types/**/*.ts"  // Ensure type files are included
  ],
  "exclude": ["node_modules"]
}
